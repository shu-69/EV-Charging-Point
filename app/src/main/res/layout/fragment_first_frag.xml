                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="140dp"
                        android:layout_height="240dp"
                        app:neumorph_shadowColorDark="#4D000000"
